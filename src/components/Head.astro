<header class="homemain" id="home">
    <div class="homehead z-10">
        <div class="homelogo">
            <img
                class="homelogo-img"
                src="http://samarthmeditech.com/assets/images/logo.png"
                alt="samarth meditech"
            />
        </div>
        <nav class="homenav">
            <ul class="homenav-bar">
                <li><a class="hometxt-nav" id="H" href="#home">Home</a></li>
                <li><a class="hometxt-nav" id="A" href="#about">About</a></li>
